/* pages/book/book.wxss */
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
  -webkit-overflow-scrolling : touch;
  /* background-color: #eae5c9; */
}  
.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  border-bottom: 2rpx solid #777;  
}  
.tab-item {  
  flex: 1;
  width: 33.3%;  
  text-align: center;  
  font-size: 28rpx;
  color: #777;  
  padding: 20rpx;
}  
.swiper {  
  height: 1100px;  
}  
.on {  
  color: black; 
  border-bottom: 2rpx solid #1dd2c1;   
  
}

.body{
  flex: 1;
  border-bottom: 1rpx solid #e0e0e0;
  /* border-radius: 5rpx;
  box-shadow: 0 0 5rpx #e0e0e0; */
  background-color: #fff;
  height: 80rpx;
  display: flex;



}
.img{
  height: 80rpx;
  float: left;
  
}
.del{
  width: 35rpx;
  height: 35rpx;
  margin: 0 auto;
  margin-top: 11rpx;
  
}
navigator{
  height: 80rpx;
  float: left;
  flex: 1;
  
}

 .letter{
  float: left;
  font-size: 28rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  /* border-bottom: 1px solid #e0e0e0; */
} 

.jump{
  float: right;
  width: 58rpx;
  height: 58rpx;
  margin: 0 auto;
  margin-top: 11rpx;
  
}
.mean{
  float: right;
  font-size: 28rpx;
  line-height: 80rpx;
  margin-right: 40rpx;
}


.li{
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0;
}